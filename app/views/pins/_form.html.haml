= simple_form_for @pin, html: { multipart: true, style: 'margin-bottom: 30px;' } do |f|
  - if @pin.errors.any?
    #errors
      %h2
        = pluralize(@pin.errors.count, "error")
        prevented this project from saving

      %ul
        - @pin.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.input :image, input_html: {class: 'form-control'}

  .form-group
    = f.input :title, input_html: {class: 'form-control'}

  .form-group
    = f.input :description, input_html: {class: 'form-control'}

  .form-group
    = f.input :tag_list, input_html: {class: 'form-control'}

  .clearfix
    = f.button :submit, class: "btn btn-primary pull-right"
    = link_to "Back", locals[:return_path], class: 'pull-left'
